{
  "compilerOptions": {
   
    "target": "es2016",                                            
    "module": "commonjs", 
    "rootDir": "src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "removeComments": true,                               
    "esModuleInterop": true,                                      
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                         
    "skipLibCheck": true                                 
  }
}
